<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="info.androidhive.imagefilters">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhotoFilter"
        tools:targetApi="31">
        <activity
            android:name="com.example.photofilter.activity.PhotoActivity"
            android:exported="false" />
        <activity
            android:name="com.example.photofilter.activity.CropActivity"
            android:exported="false" />
        <activity
            android:name="com.example.photofilter.activity.IntroActivity"
            android:exported="false" />
        <activity
            android:name="com.example.photofilter.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.photofilter.activity.ListPhotoActivity"
            android:exported="false" />
        <activity
            android:name="com.example.photofilter.activity.DoneActivity"
            android:exported="false" />
        <activity
            android:name="com.example.photofilter.activity.StartActivity"
            android:exported="false" />
        <activity
            android:name="com.example.photofilter.activity.MainActivity"
            android:exported="true"></activity>
    </application>

</manifest>