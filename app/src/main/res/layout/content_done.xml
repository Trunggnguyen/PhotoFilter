<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.photofilter.activity.MainActivity"
    tools:showIn="@layout/activity_done">

    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/storage"
                android:layout_width="300dp"
                android:background="@drawable/bg_btblue"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Save to gallery"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_height="50dp"
                android:paddingRight="30dp"
                android:drawableRight="@drawable/ic_baseline_photo_library_24"/>
            <Button
                android:id="@+id/share"
                android:layout_width="300dp"
                android:background="@drawable/bg_btblue_border"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Share Image"
                android:layout_margin="8dp"
                android:textColor="#002B9E"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:drawableRight="@drawable/ic_baseline_share_24"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
